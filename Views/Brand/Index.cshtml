@model IEnumerable<DOT_NET_MVC_INVENTORY.Models.Brand>

@{
    ViewData["Title"] = "Brand";
}

<h1>Brand</h1>

<p>
    <a asp-action="AddBrand">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th> Name</th>
            <th class="text-center">IsActive</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Name</td>
                <td class="text-center"> @Html.DisplayFor(modelItem => item.IsActive)</td>
                <td class="text-center">
                    <div class="btn-group">
                    @Html.ActionLink("Edit", "UpdateBrand", new { id = item.Id }, new {  @class = "btn btn-sm btn-info badge" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure to delete this?');", @class = "btn btn-sm btn-danger badge" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
